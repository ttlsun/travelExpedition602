<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.my.travelExpedition.model.AddrBean">

	<resultMap id="addrBean" 	type="com.my.travelExpedition.model.AddrBean"></resultMap>

	<select id="getSidoGugun" parameterType="map" resultType="addrBean">
		SELECT SEQ_NO as NO, AR_CODE AS CODE, AR_NAME AS NAME
		FROM SY_CODE_ADDR
		WHERE SY_CODE = #{addrType}
		<if test="addrType == 'A2'"> AND PARENT_SEQ_NO = #{addrCode} </if>
		ORDER BY VIEW_ORDER
	</select>

</mapper>